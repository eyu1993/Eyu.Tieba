.page {
  width: 100%;
  height: 100%;
  margin-top: 30%;
}

.form {
  margin-top: 10%;
}

.form view {
  width: 90%;
  height: 40px;
  margin: 0 auto;
  margin-top: 10px;
  border-radius: 20px;
  border: 1px #f2f2f2 solid;
}

.form input {
  height: 40px;
  width: 90%;
  margin: 0 auto;
}

.placeholder {
  font-size: 0.75rem;
  opacity: 0.7;
}

button {
  width: 90%;
  margin: 0 auto;
  margin-top: 1rem;
}

.smsLink {
  width: 4.5rem;
  margin-top: 10px;
  margin-left: 20px;
  color: blue;
  font-size: 0.75rem;
  text-decoration: underline;
  line-height: 1.5rem;
}

.bottom {
  text-align: center;
  margin: 0 auto;
  width: 100%;
  position: absolute;
  bottom: 0;
  line-height: 2rem;
}

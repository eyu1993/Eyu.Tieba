.page {
  width: 90%;
  margin: 0 auto;
  margin-top: 30%;
}

.row1 {
  margin: 10px auto;
}

.input {
  height: 2.5rem;
  border-radius: 1.25rem;
  border: 1px #f2f2f2 solid;
  padding-left: 1rem;
}

.placeholder {
  font-size: 0.75rem;
  opacity: 0.7;
}

.row2 {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.row2 view {
  width: 50%;
}

.row2 button {
  margin-left: 20px;
  height: 2.5rem;
  background-color: #fff;
}

.row3 {
  margin-top: 10px;
}

.accountLink {
  width: 4.5rem;
  margin-top: 10px;
  color: blue;
  font-size: 0.75rem;
  text-decoration: underline;
  line-height: 1.5rem;
}

.bottom {
  text-align: center;
  margin: 0 auto;
  width: 100%;
  position: absolute;
  bottom: 0;
  line-height: 2rem;
}
